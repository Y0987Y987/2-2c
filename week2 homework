//1.請寫一個程式計算 10! ，也就是 10*9*8*....*1 。
#include <stdio.h>

int main(){
	int i, x=10;
	for (i=10;i>=1;i--){
		x *= i;
	}
	
	printf("10! = %d\n", x);
}

//2.請寫一個程式印出九九乘法表。
#include <stdio.h>

int main(){
	int a,b,s;
	for (a=1;a<=9;a++){
		for (b=1;b<=9;b++){
			s = a * b;
			printf("%d*%d=%d\n", a, b, s);
		}
		printf("\n");
	}
	
}

